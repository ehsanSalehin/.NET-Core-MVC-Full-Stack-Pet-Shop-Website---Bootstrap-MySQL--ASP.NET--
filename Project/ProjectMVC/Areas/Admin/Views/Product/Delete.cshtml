@model Product

<div class="content-wrapper">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-gradient-mint-dark py-3">
                        <h2 class="text-center text-white mb-0">Delete Product</h2>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Delete" method="post">
                            <input asp-for="Id" type="hidden" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Title" class="form-control" placeholder="Product Name" disabled>
                                        <label asp-for="Title">Product Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Brand" class="form-control" placeholder="Brand" disabled>
                                        <label asp-for="Brand">Brand</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px" disabled></textarea>
                                        <label asp-for="Description">Description</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Weight" class="form-control" placeholder="Weight" disabled>
                                        <label asp-for="Weight">Weight</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Type" class="form-control" placeholder="Type" disabled>
                                        <label asp-for="Type">Type</label>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <h4 class="mb-3">Pricing</h4>
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <div class="form-floating">
                                        <input asp-for="ListPrice" class="form-control" placeholder="List Price" disabled>
                                        <label asp-for="ListPrice">List Price</label>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-floating">
                                        <input asp-for="Price" class="form-control" placeholder="Regular Price" disabled>
                                        <label asp-for="Price">Regular Price</label>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-floating">
                                        <input asp-for="Price50" class="form-control" placeholder="Price for 50+" disabled>
                                        <label asp-for="Price50">Price for 50+</label>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-floating">
                                        <input asp-for="Price100" class="form-control" placeholder="Price for 100+" disabled>
                                        <label asp-for="Price100">Price for 100+</label>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-warning mt-4" role="alert">
                                <i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this product?
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
