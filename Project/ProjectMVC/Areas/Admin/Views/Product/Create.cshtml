@model ProductVM

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-mint-dark py-3">
                    <h2 class="text-center text-white mb-0">@(Model.Product.Id!=0?"Update":"Create") Product</h2>
                </div>
                <div class="card-body p-4">
                    <form method="post" class="row" enctype="multipart/form-data">
                    <input asp-for="Product.Id" hidden/>
                        <div class="row  ">
                            <div class="col-12">
                                <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Product.Title" class="form-control" placeholder="Title">
                                        <label asp-for="Product.Title">Title</label>
                                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Product.Brand" class="form-control" placeholder="Brand">
                                        <label asp-for="Product.Brand">Brand</label>
                                        <span asp-validation-for="Product.Brand" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="py-2 col-12">
                                        <label asp-for="Product.Description" class="text-musted">Description</label>
                                        <textarea asp-for="Product.Description" class="form-control" placeholder="Description" style="height: 100px"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Product.Weight" class="form-control" placeholder="Weight">
                                        <label asp-for="Product.Weight">Weight</label>
                                        <span asp-validation-for="Product.Weight" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Product.Type" class="form-control" placeholder="Type">
                                        <label asp-for="Product.Type">Type</label>
                                        <span asp-validation-for="Product.Type" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-2 ">
                                    <div class="form-floating">
                                        <input type="file" name="file" class="form-control" placeholder="Image">
                                        <label asp-for="Product.Image"></label>

                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <h4 class="mb-3">Pricing</h4>
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <div class="form-floating">
                                        <input asp-for="Product.ListPrice" class="form-control" placeholder="List Price">
                                        <label asp-for="Product.ListPrice">List Price</label>
                                        <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-floating">
                                        <input asp-for="Product.Price" class="form-control" placeholder="Regular Price">
                                        <label asp-for="Product.Price">Regular Price</label>
                                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-floating">
                                        <input asp-for="Product.Price50" class="form-control" placeholder="Price for 50+">
                                        <label asp-for="Product.Price50">Price for 50+</label>
                                        <span asp-validation-for="Product.Price50" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-floating">
                                        <input asp-for="Product.Price100" class="form-control" placeholder="Price for 100+">
                                        <label asp-for="Product.Price100">Price for 100+</label>
                                        <span asp-validation-for="Product.Price100" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mt-2">
                                        <select asp-for="Product.CategoryId" asp-items="@Model.Category" class="form-select pt-1">
                                            <option value="">--Category--</option>
                                        </select>
                                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary">Create </button>
                                }
                            </div>
                    

                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons   lists   table visualblocks wordcount ',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent ',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f0f8ff;
        background-image: radial-gradient(circle at 100% 150%, #f0f8ff 24%, white 25%, white 28%, #f0f8ff 29%, #f0f8ff 36%, white 36%, white 40%, transparent 40%, transparent), radial-gradient(circle at 0 150%, #f0f8ff 24%, white 25%, white 28%, #f0f8ff 29%, #f0f8ff 36%, white 36%, white 40%, transparent 40%, transparent), radial-gradient(circle at 50% 100%, white 10%, #f0f8ff 11%, #f0f8ff 23%, white 24%, white 30%, #f0f8ff 31%, #f0f8ff 43%, white 44%, white 50%, #f0f8ff 51%, #f0f8ff 63%, white 64%, white 71%, transparent 71%, transparent), radial-gradient(circle at 100% 50%, white 5%, #f0f8ff 6%, #f0f8ff 15%, white 16%, white 20%, #f0f8ff 21%, #f0f8ff 30%, white 31%, white 35%, #f0f8ff 36%, #f0f8ff 45%, white 46%, white 49%, transparent 50%, transparent), radial-gradient(circle at 0 50%, white 5%, #f0f8ff 6%, #f0f8ff 15%, white 16%, white 20%, #f0f8ff 21%, #f0f8ff 30%, white 31%, white 35%, #f0f8ff 36%, #f0f8ff 45%, white 46%, white 49%, transparent 50%, transparent);
        background-size: 100px 50px;
    }

    .bg-gradient-mint-dark {
        background: linear-gradient(to right, #40e0d0, #20b2aa);
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #20b2aa;
    }

    .form-control:focus {
        border-color: #40e0d0;
        box-shadow: 0 0 0 0.25rem rgba(32, 178, 170, 0.25);
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9);
    }
</style>