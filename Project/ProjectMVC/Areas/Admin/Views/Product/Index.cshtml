@model List<Product>
@if(TempData["success"]!=null)
{
    <h2>@TempData["success"]</h2>
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-patch-plus-fill"></i> Create New Product
            </a>
        </div>
    </div>
 


<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Product Name
        </th>
        <th>
             Description
        </th>
        <th>
             Brand
        </th>
        <th>
             Weight
        </th>
        <th>
             Type
        </th>
        <th>
             Main Price
        </th>
        <th>
                    Price
        </th>
                <th>
                    Price 50
                </th>
                <th>
                    Price 100
                </th>
                <th>
                    Category
                </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
       { <tr>
            <td>
                @obj.Title
            </td>
            <td>
                @obj.Description
            </td>
                    <td>
                        @obj.Brand
                    </td>
                    <td>
                        @obj.Weight
                    </td>
                    <td>
                        @obj.Type
                    </td>
                    <td>
                        @obj.ListPrice
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>
                        @obj.Price50
                    </td>
                    <td>
                        @obj.Price100
                    </td>
                    <td>
                        @(obj.Category?.Name ?? "No Category")
                    </td>
  
            <th>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                      <i class="bi bi-pen-fill"></i> Edit
                    </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-delete btn-danger mx-2">
                       <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </th>
        </tr>}
    </tbody>
    </table>
</div>