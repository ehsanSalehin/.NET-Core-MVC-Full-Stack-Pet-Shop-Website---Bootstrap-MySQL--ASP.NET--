@model Category

<div class="content-wrapper">
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="card shadow-lg border-0 rounded-lg mb-5">
                    <div class="card-header bg-gradient-mint-dark">
                        <h2 class="text-center font-weight-light my-2 text-white">Delete Category</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Delete" method="post">
                            <input asp-for="Id" type="hidden" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" id="inputCategoryName" placeholder="Category Name" disabled />
                                <label for="inputCategoryName">Category Name</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="DisplayOrder" class="form-control" id="inputDisplayOrder" placeholder="Display Order" disabled />
                                <label for="inputDisplayOrder">Display Order</label>
                            </div>
                            <div class="alert alert-warning" role="alert">
                                <i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this category?
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    body {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }

    .content-wrapper {
        height: 100vh;
        display: flex;
        align-items: center;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .bg-gradient-mint-dark {
        background: linear-gradient(135deg, #38f9d7 0%, #43e97b 100%);
    }

    .btn-danger {
        background-color: #ff7675;
        border-color: #ff7675;
    }

        .btn-danger:hover {
            background-color: #fab1a0;
            border-color: #fab1a0;
        }

    .form-control:disabled {
        background-color: #f8f9fa;
        opacity: 1;
    }

    .card-body {
        padding: 1.5rem;
    }

    .form-floating > .form-control {
        padding: 1rem 0.75rem;
    }

    .form-floating > label {
        padding: 1rem 0.75rem;
    }

    .alert-warning {
        background-color: #ffeaa7;
        border-color: #fdcb6e;
        color: #2d3436;
    }
</style>